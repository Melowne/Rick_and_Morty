@{
    ViewData["Title"] = "Standorte";
}
   <div class="text-white text-center jumbotron jumbotron-fluid bg-dark">
  <div class="container">
    <h1 class="display-4">Standorte</h1>
    <hr />
  </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label  class="control-label">Typ:</label>
            <select name="typ" id="typ" class="form-control" asp-items="@ViewBag.typ"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label  class="control-label">Dimension:</label>
            <select  name="dimension" id="dimension" class="form-control" asp-items="@ViewBag.dimension"></select>
            </div>
        </div>
    </div>
    <hr />
    <button onclick="filllocationTable('@Url.Action("getStandorte")','@Url.Action("getStandort")')" class="btn btn-light">Suchen</button>
        <hr />
     <div class="col-12">
     <table   id="locationtable"   class="table table-bordered table-striped table-hover table-image invisible">
        <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Typ</th>
            <th>Dimension</th>
            <th>Einwohner insgesamt</th>
            <th>Mehr</th>
        </tr>
        </thead>
        <tbody  id="tBody"></tbody>
    </table>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" >
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modaltitle"></h5>
        <button type="button" onclick="closeClick()" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
          <div id="name"></div>
          <div id="typp"></div>
          <div id="dimensionn"></div>
     </div>
    <div class="container">
<b>Bewohnt von:</b>
<ul id="chars" class="list-group list-group-flush">
</ul>
</div>
      <div class="modal-footer">
        <div class="container">
        <button type="button" onclick="exitmodal()" class="btn btn-secondary" data-dismiss="modal">Close</button>
   </div>  
    </div>
    </div>
  </div>
</div>
<script src="~/js/orte.js" type="text/javascript"></script>
